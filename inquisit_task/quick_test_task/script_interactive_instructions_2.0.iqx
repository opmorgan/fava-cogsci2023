// User-specified variables // TODO: move to config
<parameters>
/ background_color = white
/ foreground_color = black
/ fontfamily_default = "Avenir Next"
/ fontsize_default = 5% // Change to 14pt?
/ fontsize_default_small = 3%
/ nav_button_fontsize_default = 3% // Change to 14pt?
/ fontsize_fixation = 8% // Change to make smaller (e.g., 5%) if using visual fixation cue
/ fontsize_survey = 2% // Change to make smaller (e.g., 5%) if using visual fixation cue
/ fontsize_survey_caption = 3% // Change to make smaller (e.g., 5%) if using visual fixation cue
/ iti = 0 // Time between response and next fixation, or time after timeout with nonresponse
/ fixation_duration = 600
/ shape_duration = 134 // Experiment setting: 134
/ blank_duration = 256
/ mask_duration = 134 // Experiment setting: 134. Set to 2000ms for testing
/ time_limit = 2000 // Maximum response time, after stimulus onset
/ feedback_duration = 1000
/ interblock_break_duration = 20000 // Experiment setting: 20000. Set to 1000ms for testing
/ stim_size = 11.12% // Stimulus width, in % screen size
/ stim_xposition_left = 44%
/ stim_xposition_right = 56%
/ stim_yposition = 50%
</parameters>

<defaults>
/ fontstyle = (parameters.fontfamily_default, parameters.fontsize_default)
/ screencolor = parameters.background_color
// txcolor = parameters.foreground_color
/ txbgcolor = parameters.background_color
</defaults>


// Section-specific parameters
<parameters>
/ require_interactive_response = false
</parameters>


<survey interactive_instructions_zee>
/ pages = [ 1=interactive_q1a;  2=interactive_q1b;  3=interactive_q1c;  4=interactive_q1d;
		    5=interactive_q2a;  6=interactive_q2b;  7=interactive_q2c;  8=interactive_q2d;
		    9=interactive_q3a; 10=interactive_q3b; 11=interactive_q3c; 12=interactive_q3d;
		   13=interactive_q4a; 14=interactive_q4b]
/ showpagenumbers = false
/ showquestionnumbers = false
/ fontstyle = (parameters.fontfamily_default, parameters.fontsize_survey, false, false, false, false, 5, 1)
/ navigationbuttonfontstyle = (parameters.fontfamily_default, parameters.nav_button_fontsize_default)
// finishlabel = "Click here to continue"
/ nextlabel = "Click here to continue"
/ showbackbutton = false
/ recorddata = true
</survey>

//// Q1: Big circle (present)
<image interactive_q1_image>
/ items = ("resources_example_interactive_q1_bigcircle.svg")
/ size = (50%, null)
</image>

// Q1a: Should you press 'zee'?
<surveypage interactive_q1a>
/ questions = [1=interactive_q1_image; 2=interactive_q1a_rb]
/ branch = [if (radiobuttons.interactive_q1a_rb.response=="Yes") surveypage.interactive_q1_correct]
</surveypage>

<radiobuttons interactive_q1a_rb>
/ caption = "For example, If you see these shapes in the experiment, should you press the 'zee' key? (Remember, in the experiment, you should press the 'zee' key whenever you see either a circle or square.)"
/ fontstyle = (parameters.fontfamily_default, parameters.fontsize_survey_caption, false, false, false, false, 5, 1)
/ responsefontstyle = (parameters.fontfamily_default, parameters.fontsize_survey, false, false, false, false, 5, 1)
/ options = ("Yes", "No")
/ validresponse = ("Yes", "No")
/ required = parameters.require_interactive_response
</radiobuttons>

<surveypage interactive_q1_correct>
/ questions = [1=interactive_q1_image; 2=interactive_q1_correct_caption]
</surveypage>

<caption interactive_q1_correct_caption>
/ caption = "Correct!"
/ fontstyle = (parameters.fontfamily_default, parameters.fontsize_survey_caption, false, false, false, false, 5, 1)
/ position = (10%, 50%)
/ size = (80%, null)
</caption>

// Q1b: Do you see a circle, or a square?
<surveypage interactive_q1b>
/ questions = [1=interactive_q1_image; 2=interactive_q123b_rb]
</surveypage>

<radiobuttons interactive_q123b_rb>
/ caption = "The correct answer was 'yes'—if you see these shapes in the experiment, you should press the 'zee' key, because the shapes include either a circle or a square. In this case, do you see a circle, or a square?"
/ fontstyle = (parameters.fontfamily_default, parameters.fontsize_survey_caption, false, false, false, false, 5, 1)
/ responsefontstyle = (parameters.fontfamily_default, parameters.fontsize_survey, false, false, false, false, 5, 1)
/ options = ("Circle", "Square")
/ validresponse = ("Circle", "Square")
/ required = parameters.require_interactive_response
</radiobuttons>

// Q1c: Is it in the big shapes, or the little shapes?
<surveypage interactive_q1c>
/ questions = [1=interactive_q1_image; 2=interactive_q1c_rb]
</surveypage>

<radiobuttons interactive_q1c_rb>
/ caption = "The correct answer was 'circle'. In this case, is the circle in the big shapes, or the little shapes?"
/ fontstyle = (parameters.fontfamily_default, parameters.fontsize_survey_caption, false, false, false, false, 5, 1)
/ responsefontstyle = (parameters.fontfamily_default, parameters.fontsize_survey, false, false, false, false, 5, 1)
/ options = ("In the big shapes", "In the little shapes")
/ validresponse = ("In the big shapes", "In the little shapes")
/ required = parameters.require_interactive_response
</radiobuttons>

// Q1d: Recap.
<surveypage interactive_q1d>
/ questions = [1=interactive_q1_image; 2=interactive_q1d_caption]
</surveypage>

<caption interactive_q1d_caption>
/ caption = "The correct answer was 'in the big shapes'. If you see these shapes in the experiment, you should press the 'zee' key, because the shapes include either a circle or a square—In this case, there is a circle in the big shapes."
/ fontstyle = (parameters.fontfamily_default, parameters.fontsize_survey_caption, false, false, false, false, 5, 1)
/ position = (10%, 50%)
/ size = (80%, null)
</caption>


